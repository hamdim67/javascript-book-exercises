function multiply (num1, num2) {
  let result = num1 * num2;

  console.log(`${num1} * ${num2} = ${result}`);

};


let rlSync = require('readline-sync');
let num1 = rlSync.question("Enter the first number: ");
let num2 = rlSync.question("Enter the second number: ");

multiply(num1, num2);


//Explanation of why it works

//First, I wrote out the 'rlSync' variable
//Then I defined 'num1' and 'num2' using 'rlSync' which asked the 
//user to input the first and second number respectively
//Then, I wrote a function 'multiply' that takes a number
//'num1' and 'num2' and then puts those values
//into a variable called 'result' which multiplies them
//together. Then I console.logged the statement 'num1 * num2 = result'
//via a template literal
//Finally, I called the 'multiply' function with 'num1' and 'num2' as parameters

